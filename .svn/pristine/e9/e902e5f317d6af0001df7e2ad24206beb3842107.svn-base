            break;
        case 1:{
            if (![[self.dataDIc allKeys] containsObject:key]) {
                EC_ProductRelatedVC *vc=[[EC_ProductRelatedVC alloc]init];
                vc.isRelated=YES;
                vc.titleName=@"关联商品";
                __weak typeof(self) wSelf = self;
                vc.backModel=^(TemplateModel *model){
                    [wSelf.dataDIc setValue:model forKey:key];
